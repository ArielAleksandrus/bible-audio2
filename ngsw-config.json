{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.csr.html",
          "/index.html",
          "/manifest.json",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "static-assets",
      "installMode": "prefetch",           // ‚Üê changed: prefetch these on first visit/install
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",                     // catches /assets/i18n/*.json, /assets/locales/**/*.json etc.
          "/assets/**/*.json"              // more explicit if you want only JSONs
        ]
      }
    },
    {
      "name": "other-assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/**/*.(txt|mp3|svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ],
        "urls": [
          "https://nlabs.live:3003/assets/bible/audio/**"
        ]
      }
    }
  ]
}
